<p id="notice"><%= notice %></p>

<h1>User Fund Projects</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_fund_projects.each do |user_fund_project| %>
      <tr>
        <td><%= user_fund_project.user %></td>
        <td><%= user_fund_project.project %></td>
        <td><%= link_to 'Show', user_fund_project %></td>
        <td><%= link_to 'Edit', edit_user_fund_project_path(user_fund_project) %></td>
        <td><%= link_to 'Destroy', user_fund_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Fund Project', new_user_fund_project_path  , { :class=>"btn btn-primary" } %>
