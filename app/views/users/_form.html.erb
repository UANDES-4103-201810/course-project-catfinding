<%= form_for(@user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    Not working xd
    <%= form.label :gender %>
    <%= form.radio_button(:gender, "M") %>
    <%= form.label(:gender_m, "Male") %>
    <%= form.radio_button(:gender, "F") %>
    <%= form.label(:gender_f, "Female") %>
    <%= form.radio_button(:gender, "O") %>
    <%= form.label(:gender_, "Other") %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday  %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <% if current_user.is_admin %>
    <div class="field">
      <%= form.label :is_admin %>
      <%= form.check_box(:is_admin) %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
