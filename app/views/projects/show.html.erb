<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div style="float: left;">
    <%= image_tag @project.avatar.url(:medium) %>
  </div>
  <div class="container" style="margin-left: 50px">
  <div>
  <p>
    <strong>Title:</strong>
    <%= @project.title %>
  </p>

  <p>
    <strong>Markdown:</strong>
    <%= @project.markdown %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @project.description %>
  </p>

  <p>
    <strong>Goalamount:</strong>
    <%= @project.goalamount %>
  </p>

  <p>
    <strong>Currentamount:</strong>
    <%= @project.currentamount %>
  </p>

  <p>
    <strong>Approved:</strong>
    <%= @project.approved %>
  </p>

  <p>
    <strong>Deadline:</strong>
    <%= @project.deadline %>
  </p>

  <p>
    <strong>Category:</strong>
    <% @categories.each do |c| %>
    <%= c.name %>
      <% end %>
  </p>
  </div>
</div>
</div>
<h3>Promises</h3>
<% if (not @promises.nil?) && (not @promises.empty?) %> <!-- no se si esto esta bien, arreglar -->
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Etd</th>
    <th>Project</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @promises.each do |promise| %>
    <tr>
      <td><%= promise.name %></td>
      <td><%= promise.amount %></td>
      <td><%= promise.description %></td>
      <td><%= promise.etd %></td>
      <td><%= promise.project.title %></td>
      <td><%= link_to 'Show', promise %></td>
      <% if user_signed_in? %>
        <% if current_user.is_admin %>
          <td><%= link_to 'Edit', edit_promise_path(promise) %></td>
          <td><%= link_to 'Destroy', promise, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      <% end %>
      <% end %>
    </tr>
  </tbody>
</table>
  <% else %>
  <p> There are no promises for this project</p>
<% end %>

<%= link_to 'Edit', edit_project_path(@project)  , { :class=>"btn btn-primary" } %>
<%= link_to 'Back', projects_path, {:class => "btn btn-primary"} %>
<% if user_signed_in? %>
  <% if current_user.is_admin || UserProject.find_by_project_id(@project.id).user_id == current_user.id %>
    <%= link_to 'New Promise', new_promise_path, {:class => "btn btn-primary"} %>
  <% end %>
<% end %>
