    </ul>
  </div>
</nav>


<table class="table" align="center">
<tr>
<td align="center">
<input type="text" placeholder="Search by tittle or description..." name="uname" size="100"></td>
<td align="center">
<div class="form-group">
<select class="form-control" id="sel1">
  <option>Category...</option>
  <option>Film</option>
  <option>Design & Tech</option>
  <option>Publishing</option>
  <option>Games</option>
  <option>Arts</option>
  <option>Music</option>
  <option>Comic & Illustration</option>
  <option>Food & Craft</option>
</select>
</div>
</td>
  <td align="center">
    <button type="button" class="btn btn-primary" >Apply</button>
  </td>
</tr>

</table>

<!-- esta tabla tiene un boton a la derecha, si quieres agregarle botones, le agregas
un td con width 10% y le restas 10% al width del primer td-->
<table width="100%">
  <tr>
    <td width=" 90%">
      <h1>Projects</h1>
    </td>
    <td width="10%">
      <form action="/projects/new">
        <input class="btn btn-primary" type="submit" value="New Project">
      </form>
    </td>
  </tr>
</table>

<!-- esta es la tabla con proyectos -->
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th>Goal amount</th>
      <th>Current amount</th>
      <th>Deadline</th>
      <th>Category</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.tittle %></td>
        <td><%= project.description %></td>
        <td><%= project.goalamount %></td>
        <td><%= project.currentamount %></td>
        <td><%= project.deadline %></td>
        <td><%= project.category %></td>
        <td><%= link_to 'Show', project %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
</html>