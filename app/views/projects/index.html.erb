<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Markdown</th>
      <th>Description</th>
      <th>Goalamount</th>
      <th>Currentamount</th>
      <th>Approved</th>
      <th>Deadline</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.markdown %></td>
        <td><%= project.description %></td>
        <td><%= project.goalamount %></td>
        <td><%= project.currentamount %></td>
        <td><%= project.approved %></td>
        <td><%= project.deadline %></td>
        <td><%= project.user.name %></td>
        <% if project.outstanding %>
          <td><i class="material-icons">star</i></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', project %></td>
        <% if user_signed_in? %>
          <% if current_user.is_admin%>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Project', new_project_path , { :class=>"btn btn-primary" }%>
<% else %>
  <%=  link_to 'New Project', new_user_session_path, { :class=>"btn btn-primary" }%>
<% end %>